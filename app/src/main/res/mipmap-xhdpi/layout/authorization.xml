<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBF4AD">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="332dp"
        android:layout_height="460dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="117dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/auth_form" />

    <TextView
        android:id="@+id/textAuth"
        android:layout_width="74dp"
        android:layout_height="52dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="11dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Вход"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="124dp"
        android:layout_height="27dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="63dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Почта"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageEmail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/email"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="229dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="105dp"
        android:layout_height="33dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="173dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Пароль"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imagePassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="224dp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/email" />

    <RadioButton
        android:id="@+id/rememberPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="135dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Запомнить пароль"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="130dp"
        android:layout_height="56dp"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="53dp"
        android:background="@drawable/reg_button"
        android:text="Войти"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <EditText
        android:id="@+id/editTextTextEmailAddress2"
        android:layout_width="241dp"
        android:layout_height="34dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/imageEmail2"
        app:layout_constraintTop_toTopOf="@+id/imageEmail2" />

    <EditText
        android:id="@+id/editTextTextPassword3"
        android:layout_width="242dp"
        android:layout_height="33dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPassword"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/imagePassword2"
        app:layout_constraintTop_toTopOf="@+id/imagePassword2" />
</androidx.constraintlayout.widget.ConstraintLayout>